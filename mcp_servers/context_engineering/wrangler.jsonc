{
  "name": "context-engineering-mcp",
  "main": "src/index.ts",
  "compatibility_date": "2024-12-01",
  "node_compat": true,
  "account_id": "${CLOUDFLARE_ACCOUNT_ID}",

  "vars": {
    "NODE_ENV": "production"
  },

  "bindings": [
    {
      "name": "OAUTH_PROVIDER",
      "type": "service",
      "service": "oauth-server",
      "environment": "production"
    }
  ],

  "kv_namespaces": [
    {
      "binding": "SESSION_STORAGE",
      "id": "${SESSION_STORAGE_KV_ID}",
      "preview_id": "${SESSION_STORAGE_KV_PREVIEW_ID}"
    }
  ],

  "r2_buckets": [
    {
      "binding": "FILE_STORAGE",
      "bucket_name": "context-engineering-files"
    }
  ],

  "analytics_engine_datasets": [
    {
      "binding": "ANALYTICS",
      "dataset": "context_engineering_usage"
    }
  ],

  "routes": [
    {
      "pattern": "context-engineering.your-domain.com/*",
      "zone_name": "your-domain.com"
    }
  ],

  "triggers": {
    "crons": [
      "0 */6 * * *"
    ]
  },

  "build": {
    "command": "npm run build"
  },

  "placement": {
    "mode": "smart"
  },

  "limits": {
    "cpu_ms": 30000,
    "memory_mb": 512
  }
}