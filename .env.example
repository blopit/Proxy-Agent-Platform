# Core Platform Configuration
APP_NAME=Proxy Agent Platform
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# Alternative LLM Providers (uncomment to use)
# Anthropic
# LLM_PROVIDER=anthropic
# LLM_API_KEY=sk-ant-your-anthropic-key-here
# LLM_MODEL=claude-3-sonnet-20240229

# Google Gemini
# LLM_PROVIDER=gemini
# LLM_API_KEY=your-gemini-api-key-here
# LLM_MODEL=gemini-pro

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./proxy_agents_enhanced.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/proxy_agent_platform

# Database Pool Settings (PostgreSQL only)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# External Services
# Brave Search API (for research proxy agent)
BRAVE_API_KEY=BSA_your_brave_api_key_here

# Gmail API (for email proxy agent)
GMAIL_CREDENTIALS_PATH=./credentials/credentials.json
GMAIL_TOKEN_PATH=./credentials/token.json

# GitHub API (for code integration)
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Mobile Integration
IOS_SHORTCUTS_WEBHOOK_URL=https://your-domain.com/api/mobile/ios
ANDROID_TILES_WEBHOOK_URL=https://your-domain.com/api/mobile/android

# Gamification
XP_MULTIPLIER=1.0
STREAK_BONUS_ENABLED=true
ACHIEVEMENT_NOTIFICATIONS=true

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=false
JAEGER_ENABLED=false

# Development/Testing
TESTING=false
# SQLite for testing (in-memory for fast tests)
TEST_DATABASE_URL=sqlite:///:memory:
# PostgreSQL for integration testing
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/proxy_agent_platform_test
MOCK_EXTERNAL_APIS=false